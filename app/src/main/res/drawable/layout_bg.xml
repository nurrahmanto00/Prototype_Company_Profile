<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#4A4645" /><corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Top Color -->
    <item
        android:bottom="6dp"
        android:right="4dp"
        android:top="2dp"
        android:left="2dp">
        <shape  android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>